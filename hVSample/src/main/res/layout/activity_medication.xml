<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/medication_name_text"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:hint="Medication name"
            android:inputType="text" />


            <EditText
                android:id="@+id/medication_strength_text"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:hint="Strength"
                android:inputType="number"/>

            <Spinner
                android:id="@+id/medication_strength_spinner"
                android:layout_width="150dp"
                android:layout_height="100dp" />


            <EditText
                android:id="@+id/medication_dosage_text"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:hint="Dosage"
                android:inputType="number"/>

            <Spinner
                android:id="@+id/medication_dosage_spinner"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/medication_dosage_text"
                android:layout_alignBottom="@id/medication_dosage_text"/>

        <Spinner
            android:id="@+id/medication_how_spinner"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp">
        </Spinner>

        <EditText
            android:id="@+id/medication_how_text"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:hint="How taken"/>

        <EditText
            android:id="@+id/medication_reason_text"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:hint="Reason for taking"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/medication_start_date_text"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:hint="Start Date"
                android:inputType="date"/>

            <EditText
                android:id="@+id/medication_end_date_text"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:hint="End Date"
                android:inputType="date"
                android:layout_toRightOf="@id/medication_start_date_text"/>
        </RelativeLayout>

        <Button
            android:id="@+id/medication_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"/>


    </LinearLayout>
</ScrollView>
